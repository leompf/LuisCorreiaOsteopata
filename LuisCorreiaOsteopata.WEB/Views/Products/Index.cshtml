@model LuisCorreiaOsteopata.WEB.Models.ProductListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section MainMenu
{
    <partial name="_Menu"></partial>
}

<section class="page-header">
    <div class="page-header__bg" style="background-image: url(assets/images/backgrounds/page-header-bg.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <h3>Lista de Produtos</h3>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-controller="Account" asp-action="Index">Home</a></li>
                    <li><span class="icon-arrow-left"></span></li>
                    <li>Lista de Produtos</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="appoinment-page" id="profile-section" style="margin-top: -100px">
    <div class="container">
        <div class="row">
            <form method="get">
                <div class="row">
                    <h4 class="mb-3">Filtros</h4>
                    <hr />
                    <div class="row align-items-center mb-3">
                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-1">Nome Produto:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="NameFilter" class="form-control" id="ProductName" />
                        </div>

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-1">Categoria:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <select asp-for="CategoryFilter" asp-items="Model.Categories" class="form-control" id="ProductCategory">
                                <option value="">Todas</option>                 
                            </select>
                        </div>
                    </div>
                </div>
                <hr />

                <div id="products-table">
                    @await Html.PartialAsync("_ProductsTable", Model.Products)
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            let currentSortColumn = '@ViewBag.DefaultSortColumn';
            let currentSortState = '@(ViewBag.DefaultSortDescending ? "desc" : "asc")';
            let typingTimer;
            const debounceDelay = 0;

            function updateSortIcons() {
                $(".sortable").each(function () {
                    const icon = $(this).find(".sort-icon");
                    const col = $(this).data("sort");

                    $(this).removeClass("active-sort");
                    icon.removeClass("fa-sort-up fa-sort-down fa-sort text-muted");

                    if (col === currentSortColumn) {
                        $(this).addClass("active-sort");
                        icon.addClass(currentSortState === "asc" ? "fa fa-sort-up" : "fa fa-sort-down");
                    }
                    else
                    {
                        icon.addClass("fa fa-sort text-muted");
                    }
                });
            }

            updateSortIcons();

            function getFilters() {
                return {
                    name: $("#ProductName").val(),
                    category: $("#ProductCategory").val()
                };
            }

            function loadProducts() {
                const filters = getFilters();
                $.ajax({
                    url: '@Url.Action("Index", "Products")',
                    type: 'GET',
                     headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    data: {
                        ...filters,
                        sortBy: currentSortColumn,
                        sortDescending: currentSortState === "desc"
                    },
                    success: function (result) {
                        $("#products-table").html(result);
                        updateSortIcons();
                    },
                    error: function () {
                        alert("Erro ao carregar os dados.");
                    }
                });
            }

            $(document).on("click", ".sortable", function (e) {
                e.preventDefault();
                const sortBy = $(this).data("sort");

                if (currentSortColumn === sortBy) {
                    currentSortState = currentSortState === "desc" ? "asc" : "desc";
                }
                else
                {
                    currentSortColumn = sortBy;
                    currentSortState = "desc";
                }
                loadProducts();
            });

            $("#ProductName").on("keyup input", function () {
                clearTimeout(typingTimer);
                typingTimer = setTimeout(loadProducts, debounceDelay);
            });

            // Select input (Category)
            $("#ProductCategory").on("change", function () {
                loadProducts();
            });

            $("form").on("submit", function (e) {
                e.preventDefault();
                loadProducts();
            });
        });
    </script>

}

