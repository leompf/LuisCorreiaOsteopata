@model LuisCorreiaOsteopata.WEB.Models.AppointmentListViewModel

@{
    ViewData["Title"] = "ViewAppointments";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@section MainMenu
{
    <partial name="_Menu"></partial>
}

<section class="page-header">
    <div class="page-header__bg" style="background-image: url(assets/images/backgrounds/page-header-bg.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <h3>Ver Todas as Consultas</h3>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-controller="Account" asp-action="Index">Home</a></li>
                    <li><span class="icon-arrow-left"></span></li>
                    <li>Ver Todas as Consultas</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="appoinment-page" id="profile-section" style="margin-top: -100px">
    <div class="container">
        <div class="row">
            <form method="get">
                <div class="row">
                    <h4 class="mb-3">Filtros</h4>
                    <hr />
                    <div class="row align-items-center mb-3">
                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-1">Colaborador:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="StaffName" class="form-control" id="StaffName" />
                        </div>

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-1">Paciente:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="PatientName" class="form-control" id="PatientName" />
                        </div>
                    </div>

                    <div class="row align-items-center mb-3">

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-0">De:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="FromDate" type="date" class="form-control" />
                        </div>

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-0">Até:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="ToDate" type="date" class="form-control" />
                        </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div id="appointments-table">
            @await Html.PartialAsync("_AppointmentsTable", Model.Appointments)    
        </div>
    </div>
</section>

@section Scripts 
{
    <script>
        $(document).ready(function () {
            let currentSortColumn = '@ViewBag.DefaultSortBy';
            let currentSortState = '@(ViewBag.DefaultSortDescending ? "desc" : "asc")';
            let typingTimer;
            const debounceDelay = 0;

            function updateSortIcons() {
                $(".sortable").each(function () {
                    const icon = $(this).find(".sort-icon");
                    const col = $(this).data("sort");

                    $(this).removeClass("active-sort");
                    icon.removeClass("fa-sort-up fa-sort-down fa-sort text-muted");

                    if (col === currentSortColumn) {
                        $(this).addClass("active-sort");
                        icon.addClass(currentSortState === "asc" ? "fa fa-sort-up" : "fa fa-sort-down");
                    } 
                    else 
                    {
                        icon.addClass("fa fa-sort text-muted");
                    }
                });
            }

            updateSortIcons();

            function getFilters() {
                return {
                    staffName: $("#StaffName").val(),
                    patientName: $("#PatientName").val()
                };
            }

            function loadAppointments() {
                const filters = getFilters();
                $.ajax({
                    url: '@Url.Action("ViewAppointments", "Appointment")',
                    type: 'GET',
                    data: {
                        ...filters,
                        sortBy: currentSortColumn,
                        sortDescending: currentSortState === "desc"
                    },
                    success: function (result) {
                        $("#appointments-table").html(result);
                        updateSortIcons();
                    },
                    error: function () {
                        alert("Erro ao carregar os dados.");
                    }
                });
            }            

            $(document).on("click", ".sortable", function (e) {
                e.preventDefault();
                const sortBy = $(this).data("sort");

                if (currentSortColumn === sortBy) {
                    currentSortState = currentSortState === "desc" ? "asc" : "desc";
                } 
                else 
                {
                    currentSortColumn = sortBy;
                    currentSortState = "desc";
                }
                loadAppointments();
            });

            $("#StaffName, #PatientName").on("keyup", function () {
                clearTimeout(typingTimer);
                typingTimer = setTimeout(loadUsers, debounceDelay);
            });

            $("#StaffName, #PatientName").on("input", function () {
                loadAppointments();
            });

            $("form").on("submit", function () {
                e.preventDefault();
                loadAppointments();
            });
        });
    </script>

}