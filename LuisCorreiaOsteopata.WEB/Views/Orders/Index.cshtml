@model IEnumerable<LuisCorreiaOsteopata.WEB.Data.Entities.Order>
@using LuisCorreiaOsteopata.WEB.Data.Entities

@{
    ViewData["Title"] = "Os Meus Pedidos";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<style>
    .order-card {
        transition: all 0.3s ease;
    }

        .order-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.08);
        }
</style>

@section MainMenu
{
    <partial name="_Menu"></partial>
}

<section class="page-header">
    <div class="page-header__bg" style="background-image: url(~/assets/images/backgrounds/page-header-bg.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <h3>Os Meus Pedidos</h3>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-controller="Account" asp-action="Index">Home</a></li>
                    <li><span class="icon-arrow-left"></span></li>
                    <li>Os Meus Pedidos</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="orders-list py-5">
    <div class="container">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                Ainda não tem nenhuma encomenda.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var order in Model)
                {
                    <div class="col-12 mb-4">
                        <div class="card order-card shadow-sm border-1 rounded-3 p-3">
                            <div class="d-flex flex-wrap justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">
                                        <strong>Pedido #@order.OrderNumber</strong>
                                    </h5>
                                    <p class="text-muted mb-0">
                                        Data: @order.OrderDate.ToString("dd/MM/yyyy HH:mm") <br />
                                        Estado: <span class="badge bg-@(order.OrderStatus == OrderStatus.Completo ? "success" : order.OrderStatus == OrderStatus.Criado ? "warning" : "secondary")">
                                            @order.OrderStatus
                                        </span>
                                    </p>
                                </div>

                                <div class="text-end">
                                    <h5 class="mb-0 text-primary">@order.OrderTotal.ToString("C2")</h5>
                                    <small class="text-muted">@order.Items.Count() produtos</small>
                                </div>
                            </div>

                            <hr />

                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var item in order.Items.Take(3))
                                {
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product.ImageFullPath" alt="@item.Product.Name"
                                             class="rounded me-2" style="width:60px;height:60px;object-fit:cover;" />
                                        <div>
                                            <div>@item.Product.Name</div>
                                            <small class="text-muted">@item.Quantity x @item.Value.ToString("C2")</small>
                                        </div>
                                    </div>
                                }

                                @if (order.Items.Count() > 3)
                                {
                                    <div class="align-self-center text-muted">
                                        +@((order.Items.Count() - 3)) mais...
                                    </div>
                                }
                            </div>

                            <div class="text-end mt-3">
                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    Ver detalhes
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

