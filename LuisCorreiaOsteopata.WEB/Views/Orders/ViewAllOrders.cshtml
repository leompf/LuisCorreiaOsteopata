@model LuisCorreiaOsteopata.WEB.Models.OrderListViewModel

@{
    ViewData["Title"] = "Pedidos";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section MainMenu
{
    <partial name="_Menu"></partial>
}

<section class="page-header">
    <div class="page-header__bg" style="background-image: url(assets/images/backgrounds/page-header-bg.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <h3>Ver Todos os Pedidos</h3>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-controller="Account" asp-action="Index">Home</a></li>
                    <li><span class="icon-arrow-left"></span></li>
                    <li>Ver Todos os Pedidos</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="appoinment-page" id="profile-section" style="margin-top: -100px">
    <div class="container-fluid px-5">
        <div class="row">
            <form method="get">
                <div class="row">
                    <h4 class="mb-3">Filtros</h4>
                    <hr />
                    <div class="row align-items-center mb-3">
                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-1">Nº do Pedido:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="OrderNumberFilter" class="form-control" id="OrderNumber" />
                        </div>

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-1">Utilizador:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="OrderUserFilter" class="form-control" id="OrderUser" />
                        </div>
                    </div>

                    <div class="row align-items-center mb-3">

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-0">Data do Pedido:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="OrderDateFilter" type="date" class="form-control" />
                        </div>

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-0">Data de Entrega:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="OrderDeliveryDateFilter" type="date" class="form-control" />
                        </div>

                        <div class="col-auto">
                            <label class="col-form-label fw-bold pe-0">Data de Pagamento:</label>
                        </div>
                        <div class="col-auto ps-0">
                            <input asp-for="OrderPaymentDateFilter" type="date" class="form-control" />
                        </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div id="orders-table">
            @await Html.PartialAsync("_OrdersTable", Model.Orders)
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            let currentSortColumn = '@ViewBag.DefaultSortBy';
            let currentSortState = '@(ViewBag.DefaultSortDescending ? "desc" : "asc")';
            let typingTimer;
            const debounceDelay = 0;

            function updateSortIcons() {
                $(".sortable").each(function () {
                    const icon = $(this).find(".sort-icon");
                    const col = $(this).data("sort");

                    $(this).removeClass("active-sort");
                    icon.removeClass("fa-sort-up fa-sort-down fa-sort text-muted");

                    if (col === currentSortColumn) {
                        $(this).addClass("active-sort");
                        icon.addClass(currentSortState === "asc" ? "fa fa-sort-up" : "fa fa-sort-down");
                    } else {
                        icon.addClass("fa fa-sort text-muted");
                    }
                });
            }

            updateSortIcons();

            function getFilters() {
                return {
                    orderNumber: $("#OrderNumber").val(),
                    userId: $("#OrderUser").val(),
                    orderDate: $("input[name='OrderDateFilter']").val(),
                    deliveryDate: $("input[name='OrderDeliveryDateFilter']").val(),
                    paymentDate: $("input[name='OrderPaymentDateFilter']").val()
                };
            }

            function loadOrders() {
                const filters = getFilters();
                $.ajax({
                    url: '@Url.Action("ViewAllOrders", "Orders")',
                    type: 'GET',
                    data: {
                        ...filters,
                        sortBy: currentSortColumn,
                        sortDescending: currentSortState === "desc"
                    },
                    success: function (result) {
                        $("#orders-table").html(result);
                        updateSortIcons();
                    },
                    error: function () {
                        alert("Erro ao carregar os dados.");
                    }
                });
            }

            $(document).on("click", ".sortable", function (e) {
                e.preventDefault();
                const sortBy = $(this).data("sort");

                if (currentSortColumn === sortBy) {
                    currentSortState = currentSortState === "desc" ? "asc" : "desc";
                } else {
                    currentSortColumn = sortBy;
                    currentSortState = "desc";
                }

                loadOrders();
            });

            // Fix: select both inputs
            $("#OrderNumber, #OrderUser").on("keyup", function () {
                clearTimeout(typingTimer);
                typingTimer = setTimeout(loadOrders, debounceDelay);
            });

            $("form").on("submit", function (e) {
                e.preventDefault();
                loadOrders();
            });
        });
    </script>
}

