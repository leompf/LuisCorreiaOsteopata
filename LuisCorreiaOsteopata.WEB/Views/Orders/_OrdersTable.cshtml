@model IEnumerable<LuisCorreiaOsteopata.WEB.Data.Entities.Order>

<table class="table table-striped">
    <thead>
        <tr>
            <th><a href="#" class="sortable" data-sort="OrderNumber"><span>Nº Pedido</span> <i class="sort-icon"></i></a></th>
            <th><a href="#" class="sortable" data-sort="OrderDate"><span>Data do Pedido</span> <i class="sort-icon"></i></a></th>
            <th><a href="#" class="sortable" data-sort="DeliveryDate"><span>Data de Entrega</span> <i class="sort-icon"></i></a></th>
            <th><a href="#" class="sortable" data-sort="PaymentDate"><span>Data do Pagamento</span> <i class="sort-icon"></i></a></th>
            <th><a href="#" class="sortable" data-sort="User"><span>Utilizador</span> <i class="sort-icon"></i></a></th>
            <th><a href="#" class="sortable" data-sort="OrderTotal"><span>Montante</span> <i class="sort-icon"></i></a></th>
            <th><a href="#" class="sortable" data-sort="IsPaid"><span>Pago?</span> <i class="sort-icon"></i></a></th>
            <th>Ver</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.OrderDate</td>
                <td>@order.DeliveryDate</td>
                <td>@order.PaymentDate</td>
                <td>@order.User.Names @order.User.LastName</td>
                <td>@string.Format("{0:C2}", order.OrderTotal)</td>
                <td>@(order.IsPaid ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-link">Ver Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
