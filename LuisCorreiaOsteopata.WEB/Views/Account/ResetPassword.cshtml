@model LuisCorreiaOsteopata.WEB.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Repôr Password";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

@section MainMenu
{
    <li>
        <a asp-controller="Home" asp-action="Index">Home</a>
    </li>
}

<section class="page-header">
    <div class="page-header__bg" style="background-image: url(assets/images/backgrounds/page-header-bg.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <h3>Repôr Password</h3>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><span class="icon-arrow-left"></span></li>
                    <li>Repôr Password</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="login-one">
    <div class="container">
        <div class="login-one__form">
            <div class="inner-title text-center">
                <h2>Repôr Password</h2>
            </div>
            <form method="post">
                <div asp-validation-summary="All"></div>
                <input asp-for="Email" type="hidden" />
                <input asp-for="Token" type="hidden" />

                <div class="input-box mb-4">
                    <span class="span-validation-error" asp-validation-for="NewPassword"></span>
                    <input asp-for="NewPassword" type="password" placeholder="Nova password*" />
                </div>

                <div class="input-box mb-4">
                    <span class="span-validation-error" asp-validation-for="ConfirmPassword"></span>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirmar password*" />
                </div>

                <button type="submit" class="thm-btn align-content-center">Repôr</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            const message = '@ViewBag.ToastMessage';

            if (message && message.trim() !== '') {
                Toastify({
                    text: message,
                    duration: 4000,
                    gravity: "top", 
                    position: "center",
                    backgroundColor: "blue",
                    stopOnFocus: true
                }).showToast();
            }
        });
    </script>
}
