@{
    ViewData["Title"] = "Conta Confirmada";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section MainMenu
{
    <li>
        <a asp-controller="Home" asp-action="Index">Home</a>
    </li>
}

<section class="page-header">
    <div class="page-header__bg" style="background-image: url(~/assets/images/backgrounds/page-header-bg.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <h3>Confirmação de conta</h3>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><span class="icon-arrow-left"></span></li>
                    <li>Confirmação de conta</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<div class="alert alert-success mt-4 inner-title text-center">
    <h2>Conta ativada com sucesso!</h2>
    <p>Podes agora iniciar sessão com as tuas credenciais.</p>
    <form method="get">
        <div class="form-group">
            <button asp-action="Login" class="thm-btn" type="submit" data-loading-text="Por favor aguarda...">
                Fazer Login
                <span class="icon-right-arrow"></span>
            </button>
        </div>
    </form>
</div>

